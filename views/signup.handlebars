<section class="sign-in-page">
    <div class="form-heading">
        <h1>Sign Up</h1>
    </div>
    <div class="form-section">
        <form class="signup-form">
            <div>
                <label for="username-signup">Select a Username:</label>
                <input type="text" class="entry-field-user" id="username-signup" />
            </div>
            <div>
                <label for="password-signup">Select a password (four characters):</label>
                <input type="password" class="entry-field-pass" id="password-signup" />
            </div>
            <div class="login-btn">
                <button type="submit" class="login-signup-btn">Sign Up!</button>
            </div>
        </form>
    </div>

    <a href="/login" class="login-link">Log In</a>
</section>

<script src="/js/signup.js"></script>